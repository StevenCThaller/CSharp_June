@model Drank
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row">
            <h1>Welcome to Thursty Thirsday</h1>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="row">
                    <h2>All Liquors</h2>
                </div>
                <div class="row">
                    <table class="table">
                        <thead>
                            <th>Id</th>
                            <th>Brand</th>
                            <th>Type</th>
                            <th>Proof</th>
                        </thead>
                        <tbody>
                            @foreach(Liquor booze in Model.AllBooze)
                            {
                                <tr>
                                    <td>@booze.LiquorId</td>
                                    <td>@booze.Brand</td>
                                    <td>@booze.Type</td>
                                    <td>@booze.Proof</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="row">
                    <h2>All Mixers</h2>
                </div>
                <div class="row">
                    <table class="table">
                        <thead>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Flavor</th>
                        </thead>
                        <tbody>
                            @foreach(Mixer schmooze in Model.NotBooze)
                            {
                                <tr>
                                    <td>@schmooze.MixerId</td>
                                    <td>@schmooze.Name</td>
                                    <td>@schmooze.Flavor</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="row">
                    <h3>Make a Liquor</h3>
                </div>
                <div class="row">
                    <form class="col-sm-10 offset-sm-1" asp-action="CreateLiquor" asp-controller="Home" method="post">
                        <div class="form-group row">
                            <span class="col-sm-12 text-danger" asp-validation-for="LiquorForm.Brand"></span>
                            <label class="col-sm-4">Brand: </label>
                            <input class="col-sm-8 form-control" asp-for="LiquorForm.Brand"/>
                        </div>
                        <div class="form-group row">
                            <span class="col-sm-12 text-danger" asp-validation-for="LiquorForm.Type"></span>
                            <label class="col-sm-4">Type: </label>
                            <input class="col-sm-8 form-control" asp-for="LiquorForm.Type"/>
                        </div>
                        <div class="form-group row">
                            <span class="col-sm-12 text-danger" asp-validation-for="LiquorForm.Proof"></span>
                            <label class="col-sm-4">Proof: </label>
                            <input class="col-sm-8 form-control" asp-for="LiquorForm.Proof"/>
                        </div>
                        <div class="form-group row">
                            <input class="col-sm-4 offset-sm-4 btn btn-primary" type="submit" value="Drank"/>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="row">
                    <h3>Make a Mixer</h3>
                </div>
                <div class="row">
                    <form class="col-sm-10 offset-sm-1" asp-action="CreateMixer" asp-controller="Home" method="post">
                        <div class="form-group row">
                            <span class="col-sm-12 text-danger" asp-validation-for="MixerForm.Name"></span>
                            <label class="col-sm-4">Name: </label>
                            <input class="col-sm-8 form-control" asp-for="MixerForm.Name"/>
                        </div>
                        <div class="form-group row">
                            <span class="col-sm-12 text-danger" asp-validation-for="MixerForm.Flavor"></span>
                            <label class="col-sm-4">Flavor: </label>
                            <input class="col-sm-8 form-control" asp-for="MixerForm.Flavor"/>
                        </div>
                        <div class="form-group row">
                            <input class="col-sm-4 offset-sm-4 btn btn-primary" type="submit" value="Dronk"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>